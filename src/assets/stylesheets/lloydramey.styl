// Import core bootstrap stuff so that 
// I can use what I want

@import 'variables.styl'
@import 'mixins.styl'

@import "normalize"
@import "print"

@import "scaffolding"
@import "utilities"
@import "type"
@import "code"

$body-side-padding = 50px
$body-top-padding = 30px;
$content-left-padding = 30px;

body
  padding $body-side-padding
  padding-top $body-top-padding
  max-width $screen-md-min

h1
  padding-bottom 30px
  margin 0px

h4
  margin 0px
  padding-bottom 10px

.content
  width 100%
  max-width ($screen-md-min / 3) * 2

  @media (min-width: $screen-md-min)
    float left
    width ($screen-md-min / 3) * 2

  // @media screen and (min-width: $screen-md-min)
  //   float left

  // @media screen and (max-width: $screen-md-min)
  //   float none

  > p
    padding-left $content-left-padding
    padding-bottom 10px

.navigation
  width 100%
  max-width ($screen-md-min / 3) * 2

  @media (min-width: $screen-md-min)
    float right
    text-align right
    width ($screen-md-min / 3) - 2 * $body-side-padding

  // @media screen and (max-width: $screen-md-min)
  //   float none
  //   display inline
